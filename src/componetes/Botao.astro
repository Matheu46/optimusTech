---
const {label} = Astro.props;
---


<button>
  {label}
</button>

<style>
  button {
    background: var(--main-color);
    color: #FFF;
    padding: 10px 18px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
  }
  button:hover {
    background: rgba(142, 36, 36, .9);
  }
</style>